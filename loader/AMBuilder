# vim: set sts=2 ts=8 sw=2 tw=99 et ft=python:
import os.path

loader_name = 'RCBot2Meta'

loaderproject = builder.LibraryProject(loader_name)
loaderproject.sources += [
  'loader.cpp'
]

for cxx in builder.targets:
  if cxx.target.platform in ['windows', 'mac']:
    name = loader_name
    extra_ldflags = []
  elif cxx.target.platform == 'linux':
    name = loader_name + '_i486'
    extra_ldflags = ['-ldl']

  if cxx.target.arch == 'x86_64':
    name = loader_name + '.x64'

  binary = MMS.HL2LoaderConfig(loaderproject, builder, cxx, name)
  if binary.compiler.family == 'gcc' or binary.compiler.family == 'clang':
    binary.compiler.cxxflags += ['-fno-rtti']
  elif binary.compiler.family == 'msvc':
    binary.compiler.cxxflags += ['/GR-']
  binary.compiler.linkflags += extra_ldflags

MMS.mms_plugins += builder.Add(loaderproject)